    <component name="EmailAddress" id="input-email" type="text" />
    <component name="PhoneNumber" id="input-phone" type="text" />
    <component name="Biography" id="text-biografia" type="characters" />
    <component name="Photo" xpath="//a[@id='add-photo']/preceding-sibling::div/input[@type='file']" type="file" />
